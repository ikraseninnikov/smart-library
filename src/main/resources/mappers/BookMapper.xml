<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.library.mapper.BookMapper">

    <resultMap id="bookMap" type="com.library.entity.Book">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="author" column="author"/>
        <result property="isbn" column="isbn"/>
        <result property="isAvailable" column="is_available"/>
    </resultMap>

    <select id="getAll" resultMap="bookMap">
        SELECT * FROM books
    </select>

    <select id="getById" parameterType="long" resultMap="bookMap">
        SELECT * FROM books WHERE id = #{id}
    </select>

    <select id="findByIsbn" parameterType="string" resultMap="bookMap">
        SELECT * FROM books WHERE isbn = #{isbn}
    </select>

    <insert id="insert" parameterType="com.library.entity.Book" useGeneratedKeys="true" keyProperty="id">
        <selectKey keyProperty="id" resultType="long" order="BEFORE">
            SELECT books_seq.NEXTVAL FROM dual
        </selectKey>
        INSERT INTO books (id, title, author, isbn, is_available)
        VALUES (#{id}, #{title}, #{author}, #{isbn,jdbcType=VARCHAR}, #{isAvailable})
    </insert>

    <update id="update" parameterType="com.library.entity.Book">
        UPDATE books
        SET title=#{title}, author=#{author}, isbn = #{isbn}, is_available=#{isAvailable}
        WHERE id=#{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM books WHERE id=#{id}
    </delete>

</mapper>
